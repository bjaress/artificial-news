import wikitextparser as wtp
import textwrap
source = textwrap.dedent(
    """
    Hello, '''bold''' [[link]].
    <ref>ignore</ref> <ref name="bs"/>
    """)
parsed = wtp.parse(source)
best = parsed.sections[0]
for ref in best.get_tags("ref"):
    del ref[:]

wtp.parse(best.contents).plain_text()
