import wikitextparser as wtp
import textwrap
source = textwrap.dedent(
    """
    {{Short description|none}}
    {{Use mdy dates|date=October 2021}}
    [[File:Eliud Kipchoge in Berlin.jpg|alt=Eliud Kipchoge at the Berlin marathon 2022|thumb|396x396px|Eliud Kipchoge during his world record run at the 2022 Berlin marathon with 2:01:09]]
    """)
parsed = wtp.parse(source)
best = parsed.sections[0]
for ref in best.get_tags("ref"):
    del ref[:]

wtp.parse(best.contents).plain_text()
